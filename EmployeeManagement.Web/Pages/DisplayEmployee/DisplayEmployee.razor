@inherits DisplayEmployeeBase
@using Pragim.Components.ConfirmPage

<div class="col-md-4">
    <div class="card" style="width: 18rem;">
        <img src="@Employee.PhotoPath" class="card-img-top" alt="...">
        <div class="card-body">
            <h2 class="card-title mb-3" style="text-align:center">
                <input type="checkbox" class="mr-1" style="length:15px" checked="@IsSelected" @onchange="CheckBoxChanged" />
                  @Employee.FirstName @Employee.LastName</h2>
            @*<h6 class="card-subtitle mb-2 text-muted">Job subtitle</h6>*@
        </div>
        @if (ShowFooter)
    {
        <div class="card-footer">
            <a href="@($"employeedetails/{Employee.EmployeeId}")" class="btn mr-2"><i class="fas fa-link"></i> Details</a>
                <a href="@($"editemployee/{Employee.EmployeeId}")" class="btn mr-2"><i class="fab fa-github"></i> Edit</a>
                <button type="button" class="btn btn-danger m-1"
                    @onclick="Delete_Click">
                    Delete
                </button>
        </div>
    }
    </div>
</div>
<Confirm @ref="DeleteConfirmation" ConfirmationChanged="ConfirmDelete_Click"
         ConfirmationMessage=@($"Are you sure you want to delete \"{Employee.FirstName}\"")>
</Confirm>